@{
    ViewBag.Title = "Home Page";
}

@model IEnumerable<FinalProject.Models.Company>

<div class="row" style="position: relative; overflow-y: hidden; height: 300px">
    <video style=" width: 100%; min-height: 300px; }" autoplay loop>
        <source src="https://s3.amazonaws.com/www-assets.invisionapp.com/Homepage/enterprise-loop.mp4" type="video/mp4" style="z-index: 10;">
    </video>
    <div style="position: absolute; top: 0; right: 0; width: 100%; height: 100%; background-color: #191d22; background-color: rgba(25, 29, 34, .75);">
        <div style="position: absolute; top: 60%; right: 0; width: 100%; height: 100%; text-align: center; font-size: 30px; font-weight: bold; color: white; text-shadow: 0px 0px 10px black;">
            Stay updated with the most recent development solutions! <br />
            Learn which are the hotest dev tools in the industry, that fit your project!
        </div>
    </div>
</div>
<div class="FlexRow" style=" flex-wrap: wrap; justify-content: space-around;">
    @foreach (var item in Model)
    {
        <div class="company-icon" style="margin: 10px; flex: 1;">
            <a href='@Url.Action("Details", "Company", new { id = item.CompanyId })'>
            <img src="@Html.DisplayFor(model => item.ImagePath)" style="height: 100px;"/>
            </a>
        </div>
    }
</div>
