@{
    ViewBag.Title = "Home Page";
}

@model IEnumerable<FinalProject.Models.Company>

<div class="row" style="position: relative; overflow-y: hidden; height: 300px">
    <video width="100%" autoplay loop>
        <source src="https://s3.amazonaws.com/www-assets.invisionapp.com/Homepage/enterprise-loop.mp4" type="video/mp4" style="z-index: 10;">
    </video>
    <div style="position: absolute; top: 0; right: 0; width: 100%; height: 100%; background-color: #191d22; background-color: rgba(25, 29, 34, .75);">
        <div style="position: absolute; top: 60%; right: 0; width: 100%; height: 100%; text-align: center; font-size: 30px; font-weight: bold; color: white; text-shadow: 0px 0px 10px black;">
            Stay updated with the most latest development solutions! <br />
            Learn which are the hotest dev tools in the industry, that fit your project!
        </div>
    </div>
</div>
<div class="row" style="z-index: 1; background-color: white; position: relative;">
    <div class="col-md-4">
        <h3>hotest companies in the site</h3>
        <div class="FlexRow">
            @foreach (var item in Model)
            {
                <img src="@Html.DisplayFor(model => item.ImagePath)" style=" max-height: 100px; margin: 10px;" />
            }
        </div>
    </div>
</div>
<script>
    function drawOnCanvas(id) {
        var c = document.getElementById(id);
        var ctx = c.getContext("2d");
        ctx.fillStyle = "#000000";
        ctx.fillRect(0, 0, 220, 10);
    }

    drawOnCanvas("myCanvas1");
    drawOnCanvas("myCanvas2");
</script>

<style>
    .jumbotron {
        border-radius: 15px;
    }

    .jumbotron h1 {
        color: black;
        text-shadow: 5px 2px 5px #000000;
        transition: color 0.5s ease;
    }

    .jumbotron h1:hover {
        color: blue;
    }
    
    .FlexRow {
        width: 100%;
        display: flex;
        flex-direction: row;
    }

    </style >
