<script>
        function Canvas() {
            var canvas = document.getElementById("canvasid");
            var ctx = canvas.getContext("2d");
            ctx.font = "30px Arial";
            ctx.textAlign = "center";
            ctx.fillText("Enhance your skills with our best development tools", 400, 30);
        }

        Canvas("canvasid");

        $(document).ready(function () {
            $("#canvasid").click(function() { alert("best in the world!") });
        });
    </script>

