<!DOCTYPE html>
<html>
<head>
    <link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dev Tools Search Angine</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                </button>
                @Html.ActionLink("Dev Tools Search Angine", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse navigation">
                <nav class="nav navbar-nav">
                    @Html.ActionLink("Home", "Index", "Home")
                    @Html.ActionLink("Top-Tools", "Index", "DevelopmentTool")
                    @Html.ActionLink("Top-Companies", "Index", "Company")
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Statistics", "Index", "Statistics")<text> | </text>
                    }
                </nav>
                <div class="col-sm-3 col-md-3">
                    <div class="input-group">
                        @using (Html.BeginForm("Index", "Search", FormMethod.Get, new {@class="search-form"}))
                        {
                            <input type="text" class="form-control" placeholder="Search" name="searchRequest" id="searchRequest">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        }
                    </div>
                </div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
<div class="container body-content">
    
    @RenderBody()
    <hr/>
    <footer>
        <p>Created for the collage of managment by Nadav Kaner, Bar Miliavsky, Mor Tal and Yakir Kadkoda as an exercise, &copy; December, 2016</p>
    </footer>
</div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("/Content/Site.css")
    @RenderSection("scripts", required: false)
</body>
</html>
