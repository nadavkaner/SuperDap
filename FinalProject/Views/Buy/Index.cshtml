@using FinalProject.Models
@model FinalProject.Controllers.BuyController

@{
    ViewBag.Title = "Buy now";
}

<h2>Shop From Ebay</h2>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Buy</th>
        </tr>
    </thead>
    <tbody>
        @{
            int productNumber = 1;
            foreach (Buy.EbayItem index in ViewBag.ebayResuls)
            {
                <tr>
                    
                    <td>@productNumber.ToString()</td>
                    <td>@index.ProductName</td>
                    <td>@index.Price $</td>
                    <td><a href="@index.URL" class="btn btn-primary btn-xs">Buy</a></td>
                </tr>
                productNumber++;
            }
        }
    </tbody>
</table>
